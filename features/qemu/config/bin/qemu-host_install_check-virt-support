#! /usr/bin/env bash

set -u


echo -e "\n\nğŸ›¸ Checking QEMU installation...\n";
qemu-system-x86_64 --version

echo -e "\n\nğŸ›¸ Checking CPU virtualization support...\n";
egrep -c '(vmx|svm)' /proc/cpuinfo


lscpu | grep Virtualization
if [ $? -eq 0 ]; then
    echo -e "\nâœ… Your host supports virtualization extensions!\n"
    exit 0
else
    echo -e "\nâŒ Your host does NOT support virtualization extensions!\n"
    exit 1
fi
