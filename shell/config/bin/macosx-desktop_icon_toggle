#!/usr/bin/env bash

# Reads the current value
current_create_desktop=`defaults read com.apple.finder CreateDesktop`

# Flip it
new_create_desktop=true
if [ "$current_create_desktop" = true ] ; then
    new_create_desktop=false
fi

# Write the new conf and restart
defaults write com.apple.finder CreateDesktop $new_create_desktop
killall Finder

